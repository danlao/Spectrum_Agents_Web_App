@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                To learn more about ASP.NET MVC visit
                <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
                The page features <mark>videos, tutorials, and samples</mark> to help you get the most from ASP.NET MVC.
                If you have any questions about ASP.NET MVC visit
                <a href="http://forums.asp.net/1146.aspx/1?MVC" title="ASP.NET MVC Forum">our forums</a>.
            </p>
        </div>
    </section>
}

<a href="@Url.Action("About")">
    <img src="@Url.Content("~/Images/heroAccent.png")" />
</a>

@if (Request.IsAuthenticated)
{
    <table>
        <tr>
            <td>
                <a href="@Url.Action("History", "Account")">
                    <img src="@Url.Content("~/Images/Landing/History.png")" />
                </a>
            </td>
            <td>
                <a href="@Url.Action("Screener", "Account")">
                    <img src="@Url.Content("~/Images/Landing/Screener.png")" />
                </a>
            </td>
        </tr>
        <tr>
            <td>
                <a href="@Url.Action("ASIST", "Account")">
                    <img src="@Url.Content("~/Images/Landing/ASIST.png")" />
                </a>
            </td>
            <td>
                <a href="@Url.Action("CADI", "Account")">
                    <img src="@Url.Content("~/Images/Landing/CADI.png")" />
                </a>
            </td>
        </tr>
    </table>
}
else
{
<table>
    <tr>
        <td>
            <a href="@Url.Action("Login", "Account", new { returnUrl = "/Account/History" })">
                <img src="@Url.Content("~/Images/Landing/History.png")" />
            </a>
        </td>
        <td>
            <a href="@Url.Action("Login", "Account", new { returnUrl = "/Account/Screener" })">
                <img src="@Url.Content("~/Images/Landing/Screener.png")" />
            </a>
        </td>
    </tr>
    <tr>
        <td>
            <a href="@Url.Action("Login", "Account", new { returnUrl = "/Account/ASIST" })">
                <img src="@Url.Content("~/Images/Landing/ASIST.png")" />
            </a>
        </td>
        <td>
            <a href="@Url.Action("Login", "Account", new { returnUrl = "/Account/CADI" })">
                <img src="@Url.Content("~/Images/Landing/CADI.png")" />
            </a>
        </td>
    </tr>
</table>
}